{
  "name": "renovate-config-cozy-konnector",
  "version": "1.3.0",
  "main": "index.js",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "cozy",
        "schedule:weekly"
      ],
      "updateNotScheduled": true,
      "packageRules": [
        {
          "packagePatterns": [
            "cozy-konnector-libs",
            "cozy-jobs-cli",
            "cozy-konnector-build"
          ],
          "timezone": "Europe/Paris",
          "schedule": [
            "every weekday after 08:00 pm",
            "every weekday before 07:00 am",
            "every weekend"
          ],
          "automerge": true,
          "major": {
            "automerge": false
          }
        }
      ]
    }
  }
}
